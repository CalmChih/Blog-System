<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.fallingintodreams.flying.bicycle.backend.dao.IUserDao">
    <resultMap id="userMap" type="top.fallingintodreams.flying.bicycle.backend.po.User">
        <id column="id" property="id"/>
        <result column="nickname" property="nickname"/>
        <result column="gender" property="gender"/>
        <result column="birthday" property="birthday"/>
        <result column="mobile" property="mobile"/>
        <result column="avatar" property="avatar"/>
        <result column="state" property="state"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <insert id="insertUserInfo" parameterType="top.fallingintodreams.flying.bicycle.backend.po.User"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user (nickname, create_time, update_time)
        VALUES (#{nickname}, now(), now())
    </insert>

    <select id="getUserInfo" parameterType="string" resultMap="userMap">
        SELECT u.id, u.nickname, u.gender, u.birthday, u.mobile, u.avatar
        FROM user u
                 INNER JOIN user_account a ON u.id = a.user_id
        WHERE a.username = #{username}
    </select>

    <update id="updateUserInfo">
        UPDATE user
        <set>
            <if test="nickname != null and nickname != ''">
                nickname = #{nickname},
            </if>
            <if test="gender != null">
                gender = #{gender},
            </if>
            <if test="birthday != null">
                birthday = #{birthday},
            </if>
            <if test="mobile != null and mobile != ''">
                mobile = #{mobile},
            </if>
            <if test="avatar != null and avatar != ''">
                avatar = #{avatar},
            </if>
            <if test="state != null">
                state = #{state},
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <select id="getUserList" parameterType="hashmap" resultType="top.fallingintodreams.flying.bicycle.backend.vo.UserInfoVO">
        SELECT u.id, a.username, u.nickname, u.gender, u.birthday, u.mobile, u.state, u.create_time
        FROM user u
                 INNER JOIN user_account a ON u.id = a.user_id
        <where>
            <if test="username != null and username != ''">
                a.username = #{username}
            </if>
        </where>
        ORDER BY u.create_time DESC
    </select>

    <update id="updateUserState">
        UPDATE user
        SET state = #{state}
        WHERE id = #{userId}
    </update>

</mapper>